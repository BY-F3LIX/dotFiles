# Pulse Audio controls
#increse sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5%; notify-send -t 1000 -i $(~/.config/polybar/scripts/pulseaudio-rofi.sh --output_volume)"
#decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5%; notify-send -t 1000 -i $(~/.config/polybar/scripts/pulseaudio-rofi.sh --output_volume)"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle;  exec --no-startup-id pactl set-sink-mute 1 toggle# mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 0 toggle; exec --no-startup-id pactl set-source-mute 1 toggle # mute mic

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#Brightnes control
#bindsym XF86MonBrightnessUp exec xbacklight -inc 20 
#bindsym XF86MonBrightnessDown exec xbacklight -dec 20

bindsym XF86MonBrightnessUp exec " sudo light -A 10; notify-send -t 1000 $(light  -G | cut -d. -f1)'%'"
bindsym XF86MonBrightnessDown exec " sudo light -U 10; notify-send -t 1000 $(light  -G | cut -d. -f1)'%'"

